<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/temperature"

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        tools:ignore="RtlHardcoded,UselessParent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="@string/temperature"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/temperatureValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unknown"
            android:paddingRight="1dp"
            android:gravity="right"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/celsjusz_deg" />
    </TableRow>
    </TableLayout>


    <TableLayout
        android:id="@+id/relays"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/relay0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/relay1"
                android:paddingHorizontal="10dp"/>

            <TextView
                android:id="@+id/relay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/relay2"
                android:paddingHorizontal="10dp"/>

            <TextView
                android:id="@+id/relay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/relay3"
                android:paddingHorizontal="10dp"/>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/state0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:gravity="center_horizontal"
                android:paddingHorizontal="10dp"
                android:text="@string/unknown"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/state1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:gravity="center_horizontal"
                android:paddingHorizontal="10dp"
                android:text="@string/unknown"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/state2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:gravity="center_horizontal"
                android:paddingHorizontal="10dp"
                android:text="@string/unknown"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/set"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/target_temperature"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="160dp" />

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="3"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="148dp"
                android:autofillHints=""
                tools:ignore="LabelFor" />


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/celsjusz_deg"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="160dp" />
        </TableRow>

    </TableLayout>

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/buttonOff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/btn_default"
                android:text="@string/turn_off"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/buttonOn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/btn_default"
                android:text="@string/turn_on" />



        </TableRow>
    </TableLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/connectionState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/off"
        android:visibility="visible"
        android:textColor="@color/white"
        android:text="@string/not_cennected" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="match_parent"
                android:id="@+id/emailButton"
                android:text="@string/send_email"/>
            <Button
                android:layout_width="match_parent"
                android:id="@+id/removeArchive"
                android:text="@string/remove_archive"/>
        </TableRow>
    </TableLayout>

</LinearLayout>
